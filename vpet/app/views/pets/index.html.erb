<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<br>
<% if user_signed_in? %>
    <h2><%= 'Welcome ' + current_user.name + '!' %></h2><br>
        <%= 'Not ' + current_user.name + '? ' %>
        <%= link_to 'Logout', destroy_user_session_path, mthod: :delete %><br>
        <%= link_to 'Profile', edit_user_registration_path %><br>
<% else %>
    <h2><%= 'You must be logged in to see your pet: ' %>
        <%= link_to 'Log In', new_user_session_path %></h2><br>
        <%= 'Don\'t have an acount? Sign up! It\'s free!' %><br>
        <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>Health</th>
      <th>Clean</th>
      <th>Mood</th>
      <th>Status</th>
      <th>Asleep</th>
      <th>Strength</th>
      <th>Defense</th>
      <th>Age</th>
      <th>User</th>
      <th>Highscore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.health %></td>
        <td><%= pet.clean %></td>
        <td><%= pet.mood %></td>
        <td><%= pet.status %></td>
        <td><%= pet.asleep %></td>
        <td><%= pet.strength %></td>
        <td><%= pet.defense %></td>
        <td><%= pet.age %></td>
        <td><%= pet.user %></td>
        <td><%= pet.highscore %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
