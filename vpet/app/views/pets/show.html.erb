<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Sex:</strong>
  <% if @pet.sex == true %>
    <%= 'Male' %>
  <% else %>
    <%= 'Female' %>
  <% end %>
</p>

<p>
  <strong>Health:</strong>
  <%= @pet.health %>
</p>

<p>
  <strong>Clean:</strong>
  <%= @pet.clean %>
</p>

<p>
  <strong>Hunger:</strong>
  <%= @pet.mood %>
</p>

<p>
  <strong>Sick:</strong>
  <% if @pet.status == true %>
    <%= 'Yes' %>
  <% else %>
    <%= 'No' %>
  <% end %>
</p>

<p>
  <strong>Sleeping:</strong>
  <% if @pet.asleep == true %>
    <%= 'Yes' %>
  <% else %>
    <%= 'No' %>
  <% end %>
</p>

<p>
  <strong>Age:</strong>
  <%= ((Time.now - @pet.age)/1.day).ceil %>
</p>

<p>
  <strong>Money:</strong>
  <%= @pet.money %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @pet.user.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @pet.user_id %>
</p>

<p>
  <strong>Highscore:</strong>
  <%= @pet.highscore %>
</p>

<p>
  <strong>User:</strong>
  <%= @pet.user %>
</p>



<%= link_to 'Edit', edit_pet_path(@pet) %> |
