<h1><u>Listing References</u></h1>

<table>
	<thead>
		<tr>
			<th>URL</th>
			<th>Topic</th>
			<th>Annotation</th>
			<th>Time/Date</th>
			<th colspan="5"></th>
		</tr>
	</thead>

	<tbody>
		<% @references.each do |reference| %>
		<tr>
			<td><%= reference.url %></td>
			<td><%= reference.topic %></td>
			<td><%= reference.annotation %></td>
			<td><%= reference.updated_at %></td>

			<td><%= link_to 'Show', reference %></td>
			<td><%= link_to 'Edit', edit_reference_path(reference) %></td>
			<td><%= link_to 'Delete', reference, method: :delete, data: { confirm: "Are you sure you want to delete #{reference.topic}?" } %></td>
		</tr>
		<% end %>
	</tbody>

	<h2><%= link_to 'New Reference', controller: "references", action: "new" %></h2><br>
</table>
